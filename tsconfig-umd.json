{
  "compilerOptions": {
   "outDir": "dist/es",
    "rootDir": "src",
    "target": "ES5", 
    "module": "ESNext",
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src/*.ts"],
  "exclude": [
    "node_modules",
  ],
}
